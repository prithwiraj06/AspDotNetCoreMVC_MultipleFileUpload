@model IEnumerable<Employee>;

@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach(var item in Model)
    {
        var photoPath = "~/UploadedEmployeePhotos/" + (item.PhotoPath ?? "NoImage.png");
        <div class="card m-3" style="min-width:23rem;max-width:30.5%">
            <div class="card-header">
                <h3>@item.Name</h3>
            </div>
            <img class="card-img-top image-thumnail" src="@photoPath" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script src="~/Scripts/CustomScript.js"></script>
}
